{
  "name": "hapitest2",
  "version": "1.0.0",
  "description": "Villagers API Prototype",
  "main": "server.js",
  "scripts": {
    "resetdb": "npm run unmakedb  && npm run makedb &&  npm run migratedb",
    "dropdb": "dropdb --if-exists testdb",
    "droprole": "psql -d postgres -c \"DROP ROLE IF EXISTS testuser\"",
    "unmakedb": "npm run dropdb  && npm run droprole ",
    "createdb": "createdb testdb",
    "createrole": "psql -d postgres -c \"CREATE ROLE testuser WITH PASSWORD 'p' SUPERUSER NOCREATEDB CREATEROLE INHERIT LOGIN\"",
    "makedb": "npm run setenv && npm run createrole  && npm run createdb && npm run uuiddb",
    "uuiddb": "psql -d testdb -U testuser -f ./extension",
    "migratedb": "knex migrate:latest && npm run seeddb",
    "seeddb": "knex seed:run",
    "knex": "knex",
    "test": "Test",
    "start": "node server.js",
    "setenv": "set NODE_ENV=development && set GETCONFIG_ROOT=./config"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robpierini/villagers/tree/master/hapitest2"
  },
  "author": "Villagers",
  "license": "ISC",
  "dependencies": {
    "boom": "^6.0.0",
    "getconfig": "^3.1.0",
    "hapi": "^16.6.0",
    "hapi-auth-jwt2": "^7.3.0",
    "hapi-swagger": "^7.8.1",
    "inert": "^4.2.1",
    "joi": "^11.3.4",
    "jsonwebtoken": "^8.0.1",
    "keyfob": "^1.0.0",
    "knex": "^0.13.0",
    "muckraker": "^3.4.0",
    "pg": "^7.3.0",
    "vision": "^4.1.1"
  }
}
